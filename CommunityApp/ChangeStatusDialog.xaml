<Window x:Class="CommunityApp.ChangeStatusDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunityApp"
        mc:Ignorable="d"
        Title="ChangeStatusDialog" Height="200" Width="300">
    <Grid>
        <ComboBox x:Name="StatusComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <ComboBoxItem Content="Pending"/>
            <ComboBoxItem Content="Ongoing"/>
            <ComboBoxItem Content="Done"/>
        </ComboBox>
        <Button Content="OK" 
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom" 
                Margin="0,0,0,20" Width="100"
                Click="Button_Click"/>
    </Grid>
</Window>
